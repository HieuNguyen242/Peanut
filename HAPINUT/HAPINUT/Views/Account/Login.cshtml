
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model HAPINUT.Models.Account.LoginUserViewModel
<!---->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="margin-bottom: 100px">
        <h5 class="text-center mb-4" style="color:#ff4e00;">Đăng Nhập</h5>
        <div class="login p-5 bg-dark mx-auto mw-100" style="left:50%; width:50%;">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form action="#" method="post" style="margin: auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "mb-2" })
                    <div>
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        <small id="emailHelp" class="form-text text-muted">Chúng tôi sẽ không bao giờ chia sẻ email của bạn với bất kỳ ai khác.</small>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "mb-2" })
                    <div>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-check mb-2">
                    @Html.EditorFor(model => model.RememberMe)
                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                    <label class="form-check-label" for="exampleCheck1">Lưu mật khẩu</label>
                </div>
                <button type="submit" class="btn btn-primary submit mb-4">Đăng nhập</button><br />
                <a href="/account/create-account">Tạo tài khoản</a>
            </form>
        </div>
    </div>
    <!---->
}
